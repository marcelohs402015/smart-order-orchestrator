{
  "compilerOptions": {
    // Target: ES2020 para suporte moderno mantendo compatibilidade
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    
    // Module: ESM (ES Modules) - padrão moderno do JavaScript
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode - otimizado para Vite */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - strict mode para melhor qualidade de código */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    // Path aliases - permite imports absolutos usando @
    // Exemplo: import { Button } from '@/components/Button'
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}

